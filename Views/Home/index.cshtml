<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <title>STEVES</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        header {
            background-color: #040a63;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        section {
            margin: 20px 0;
        }

        footer {
            background-color: #040a63;
            color: #fff;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>

    <header>
        <h1>STEVES</h1>
    </header>

    <section>
        <h2>Welcome to STEVES</h2>
        <p>Order your doors here:</p>
    </section>

    <section>
        <h2>Features</h2>
        <ul>
            <li>Responsive design</li>
            <li>Basic styling</li>
            <li>Easy to customize</li>
        </ul>
    </section>
    <button type="button" id="hello">hello</button>
    <button type="button" id="goodbye">goodbye</button>

    <div id="target"></div>

    <footer>
        <p>&copy; 2023 My Website</p>
    </footer>

    <script>
        console.log("Hello")
        async function hello() 
        {
            const response = await fetch("http://localhost:5041/api/hello");
            const data = await response.json();
            console.log(data);
            $("#target").text(data.doors.result)
        }
        
        async function goodbye()
        {
            const goodbye = await fetch("http://localhost:5041/api/goodbye");
            const data = await goodbye.json();
            console.log(data);
        }

        $(document).ready(function() {
            $("#hello").on("click", hello);
            $("#goodbye").on("click", goodbye);
        });
    </script>
</body>
</html>