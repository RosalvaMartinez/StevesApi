<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <title>STEVES</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        header {
            background-color: #040a63;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        section {
            margin: 20px 0;
        }

        footer {
            background-color: #040a63;
            color: #fff;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>

    <header>
        <h1>STEVES</h1>
    </header>

    <section>
        <h2>Welcome to STEVES</h2>
        <p>Order your doors here:</p>
    </section>

    <section>
        <h2>Features</h2>
        <ul>
            <li>Responsive design</li>
            <li>Basic styling</li>
            <li>Easy to customize</li>
        </ul>
    </section>

     <h2>Add New Product</h2>

    <form id="addProductForm" action="/api/add-product" method="post">
        <!-- Product Name -->
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" required>
        <br>

        <!-- Product Price -->
        <label for="productPrice">Product Price:</label>
        <input type="number" id="productPrice" name="productPrice" step="0.01" required>
        <br>

        <!-- Product Description -->
        <label for="productDescription">Product Description:</label>
        <textarea id="productDescription" name="productDescription" required></textarea>
        <br>

        <!-- Submit Button -->
        <button type="submit">Add Product</button>
    </form>


    <button type="button" id="product">PRODUCTS</button>
    <button type="button" id="customer">CUSTOMERS</button>
    <button type="button" id="order">ORDERS</button>
    <button type="button" id="supplier">SUPPLIERS</button>
    <button type="button" id="invoice">INVOICES</button>
    <button type="button" id="qualitycontrol">QUALITY CONTROL FORMS</button>
    <button type="button" id="shipping">SHIPPING</button>
    <button type="button" id="employee">EMPLOYEES</button>

    <div id="target"></div>

    <footer>
        <p>&copy; 2023 My Website</p>
    </footer>

    <script>
        const piAddress = "http://192.168.1.90:5041"

        async function product() 
        {
            const response = await fetch( piAddress + "/api/product" );
            const data = await response.json();
            console.log(data);
            createTable(data.products);
        }

        async function customer() 
        {
            const response = await fetch( piAddress + "/api/customer" );
            const data = await response.json();
            console.log(data);
            createTable(data.customers);
        }
        
        async function order()
        {
            const response = await fetch( piAddress + "/api/order" );
            const data = await response.json();
            console.log(data);
            createTable(data.orders);
        }

        async function supplier()
        {
            const response = await fetch( piAddress + "/api/supplier" );
            const data = await response.json();
            console.log(data);
            createTable(data.suppliers);
        }

        async function invoice()
        {
            const response = await fetch( piAddress + "/api/invoice" );
            const data = await response.json();
            console.log(data);
            createTable(data.invoices);
        }

        async function qualitycontrol()
        {
            const response = await fetch( piAddress + "/api/qualitycontrol" );
            const data = await response.json();
            console.log(data);
            createTable(data.qualitycontrol);
        }

        async function shipping()
        {
            const response = await fetch( piAddress + "/api/shipping" );
            const data = await response.json();
            console.log(data);
            createTable(data.shipping);
        }

        async function employee()
        {
            const response = await fetch( piAddress + "/api/employee" );
            const data = await response.json();
            console.log(data);
            createTable(data.employees);
        }

        function createTable(dataArray) 
        {
            // Empty table for new data
            $("#target").empty();
            // Create the table header
            var table = $('<table>').addClass('my-table');
            var headerRow = $('<tr>');
            Object.keys(dataArray[0]).forEach(function (key) {
                headerRow.append($('<th>').text(key));
            });
            table.append(headerRow);

            // Create the table rows
            dataArray.forEach(function (row) {
                var tableRow = $('<tr>');
                Object.values(row).forEach(function (value) {
                    tableRow.append($('<td>').text(value));
                });
                table.append(tableRow);
            });
            $("#target").append(table);

        }

        $(document).ready(function() {
            $("#product").on("click", product);
            $("#customer").on("click", customer);
            $("#order").on("click", order);
            $("#supplier").on("click", supplier);
            $("#invoice").on("click", invoice);
            $("#qualitycontrol").on("click", qualitycontrol);
            $("#shipping").on("click", shipping);
            $("#employee").on("click", employee);
        });
    </script>
</body>
</html>