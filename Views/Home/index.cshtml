<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <title>STEVES</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        header {
            background-color: #040a63;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        section {
            margin: 20px 0;
        }

        footer {
            background-color: #040a63;
            color: #fff;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>

    <header>
        <h1>STEVES</h1>
    </header>

    <section>
        <h2>Welcome to STEVES</h2>
        <p>Order your doors here:</p>
    </section>

    <section>
        <h2>Features</h2>
        <ul>
            <li>Responsive design</li>
            <li>Basic styling</li>
            <li>Easy to customize</li>
        </ul>
    </section>
    <button type="button" id="product">PRODUCTS</button>
    <button type="button" id="customer">CUSTOMERS</button>
    <button type="button" id="order">ORDERS</button>
    <button type="button" id="supplier">SUPPLIERS</button>
    <button type="button" id="invoice">INVOICES</button>
    <button type="button" id="qualitycontrol">QUALITY CONTROL FORMS</button>
    <button type="button" id="shipping">SHIPPING</button>
    <button type="button" id="employee">EMPLOYEES</button>

    <div id="target"></div>

    <footer>
        <p>&copy; 2023 My Website</p>
    </footer>

    <script>
        const piAddress = "http://192.168.1.90:5041"

        async function product() 
        {
            const response = await fetch( piAddress + "/api/product" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.products.result)
        }

        async function customer() 
        {
            const response = await fetch( piAddress + "/api/customer" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.customers.result)
        }
        
        async function order()
        {
            const response = await fetch( piAddress + "/api/order" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.orders.result)
        }

        async function supplier()
        {
            const response = await fetch( piAddress + "/api/supplier" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.suppliers.result)
        }

        async function invoice()
        {
            const response = await fetch( piAddress + "/api/invoice" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.invoices.result)
        }

        async function qualitycontrol()
        {
            const response = await fetch( piAddress + "/api/qualitycontrol" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.qualitycontrol.result)
        }

        async function shipping()
        {
            const response = await fetch( piAddress + "/api/shipping" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.shipping.result)
        }

        async function employee()
        {
            const response = await fetch( piAddress + "/api/employee" );
            const data = await response.json();
            console.log(data);
            $("#target").text(data.employees.result)
        }

        $(document).ready(function() {
            $("#product").on("click", product);
            $("#customer").on("click", customer);
            $("#order").on("click", order);
            $("#supplier").on("click", supplier);
            $("#invoice").on("click", invoice);
            $("#qualitycontrol").on("click", qualitycontrol);
            $("#shipping").on("click", shipping);
            $("#employee").on("click", employee);
        });
    </script>
</body>
</html>